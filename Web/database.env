#Cyber Clinic database configuration
#CS 425 Team 13 - PostgreSQL settings

#database connection settings for our postgresql database
#docker-compose uses these to set up the database container
POSTGRES_DB=cyberclinic
POSTGRES_USER=cyberclinic_user  
POSTGRES_PASSWORD=dev_password_change_in_production

#network settings so our backend can talk to the database
#hostname is 'database' because that's what docker-compose calls it
POSTGRES_HOST=database
POSTGRES_PORT=5432

#performance settings for handling multiple connections
POSTGRES_MAX_CONNECTIONS=100
