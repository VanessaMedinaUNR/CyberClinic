FROM python:3.11-slim AS builder

WORKDIR /src

#install system dependencies and scanning tools
RUN apt-get update && apt-get install -y \
    gcc \
    nmap \
    curl \
    wget \
    git \
    perl \
    dos2unix \
    && rm -rf /var/lib/apt/lists/*

#install Nikto from GitHub since it's not in main repos
RUN git clone https://github.com/sullo/nikto.git /opt/nikto \
    && ln -s /opt/nikto/program/nikto.pl /usr/local/bin/nikto \
    && chmod +x /opt/nikto/program/nikto.pl

#copy requirements and install Python dependencies
COPY requirements.txt .
RUN pip install --upgrade pip
RUN pip install --no-cache-dir -r requirements.txt

#copy application code
COPY . .

#create non-root user for security
RUN useradd --create-home --shell /bin/bash app \
    && chown -R app:app /src
USER app

RUN dos2unix generate_certs
RUN chmod +x generate_certs

ENTRYPOINT ["python", "main.py"]

# Generate authentication tunnel cert
#RUN openssl req -x509 -days 365 -newkey rsa:2048 -keyout $AUTH_KEY -out $AUTH_CRT -passout env:AUTH_PASS -config $SERVER_CNF
